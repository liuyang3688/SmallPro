.film{
  background-size:100%;
}
.film-wr
{
  padding:0 20rpx;
  background: #ffffff;
}
.film-title-score
{
  color:pink;
  font:italic bold 28rpx arial,sans-serif;
  margin-left: 20rpx;
}
.film-image{
    width:750rpx;
    height:375rpx;
}
.film-title{
    font-size: 42rpx;
    font-style: bold;
}
.film-num{
  font-size:24rpx;
